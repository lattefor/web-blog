


  <div class="post">
    <img src="{{ post.data.image }}" alt="" class="image">
    <div class="date">
        <i class="far fa-clock"></i>
        <span>{{ post.data.date | postDate }}</span>
    </div>
    <h3 class="title">{{ post.data.title }}</h3>
    <p class="text">{{ post.data.description }}</p>
    <div class="links">
        <a href="#" class="user">
            <i class="far fa-user"></i>
            <span>by {{ post.data.author }}</span>
        </a>
        <a href="{{ post.url }}" class="icon">
            <i class="far fa-comment"></i>
            <span>(45)</span>
        </a>
        <a href="#" class="icon">
            <i class="far fa-share-square"></i>
            <span>(29)</span>
        </a>
    </div>
</div>